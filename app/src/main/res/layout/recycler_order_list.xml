<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/nevigation"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="#fff"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/hint_color">


            <TextView
                android:id="@+id/textOrderId"
                android:layout_weight="5"
                android:gravity="left"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="@string/text_order_id"
                android:textColor="@color/app_color"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/orderId"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:text="202202"
                android:textColor="@color/app_color"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="35dp"
            android:background="@color/white">


            <TextView
                android:id="@+id/textOrderDate"
                android:layout_weight="4"
                android:gravity="left"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="@string/text_order_date"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/orderDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:text="12/01/2022"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="70dp"
            android:background="@color/white">


            <TextView
                android:id="@+id/textStatus"
                android:layout_weight="4"
                android:gravity="left"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="@string/text_status"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Delivered"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="105dp"
            android:background="@color/white">


            <TextView
                android:id="@+id/textPaymentMethod"
                android:layout_weight="4"
                android:gravity="left"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="@string/text_payment_method"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/paymentMethod"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Cash On Delivery"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="140dp"
            android:background="@color/white">


            <TextView
                android:id="@+id/textTotalCost"
                android:layout_weight="4"
                android:gravity="left"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="@string/text_total"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/totalCost"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:text="1099.00"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>